<%@ page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Insert title here</title>
		<!--
			날짜 : 2023/07/24
			이름 : 신진성
			내용 : JSP 스크립트릿 반복문 실습하기 
		-->
	</head>
	<body>
		<h3>반복문</h3>
		<h4>for</h4>
		<%
			for (int i = 1; i <= 3; i++) {
				out.println("<p>i : " + i + "</p>");
			}
		%>
		<% for (int i = 1; i <= 3; i++) { %>
		<p>i : <%=i%></p>
		<% } %>
		<h4>while</h4>
		<%
			int j = 1;
			while (j <= 3) {
		%>
		<p>j : <%=j%></p>
		<%	
				j++;
			} 
		%>
		<h4>구구단</h4>
		<table>
			<tr>
				<th>2단</th>
				<th>3단</th>
				<th>4단</th>
				<th>5단</th>
				<th>6단</th>
				<th>7단</th>
				<th>8단</th>
				<th>9단</th>
			</tr>
			<%	for (int i = 1; i <= 9; i++) { %>
			<tr>
			<%		for (int k = 2; k <= 9; k++) { %>
				<td><%=k + " x " + i + " = " + k * i%></td>		
			<%		}%>
			</tr>
			<% }%>
			
		</table>
	</body>
</html>